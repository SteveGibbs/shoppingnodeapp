{{# if products }}

    <div class="row">
        <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
            <h2>Your Shopping Cart</h2>
            <ul class="'list group">
                {{# each products}}
                  <li class="list-group-item">

                      <strong><img src ="{{this.item.imagePath}}" class="img-small"></strong>
                      <strong class="checkout">{{this.item.title}}</strong>
                      <span class="badge">{{this.qty}}</span>
                      <span class="label label-success checkout">${{this.price}}</span>
                      <div class="btn-group">
                          <button class="btn btn-primary btn-xs dropdown-toggle checkout" type="button" data-toggle="dropdown">Action <span class="caret"></span></button>
                          <ul class="dropdown-menu">
                              <li><a href="/reduce/{{this.item._id}}">Reduce by One</a></li>
                              <li><a href="/remove/{{this.item._id}}">Remove Item</a></li>
                          </ul>
                      </div>
                  </li>
                {{/each}}
            </ul>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
            <strong><h2>Total: {{totalPrice}}</h2></strong>
        </div>
    </div>
    <hr>
    <div class="row">
        <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
            <a href="/checkout" type="button" class="btn btn-success">Checkout</a>
        </div>
    </div>

{{else}}

    <div class="row">
        <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
            <h2>No Items in Cart</h2>
        </div>
    </div>

{{/if}}


